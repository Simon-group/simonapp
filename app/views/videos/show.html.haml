%html.image1
  %body.imagecleah
    .contenter
      %p.tokosya  投稿者
      %p.namer=@video.user.name
      %p.title  タイトル
      %p.name=@video.name
      %p.title 投稿者コメント
      = simple_format(@video.text, class: 'comment-text')
      %h3.iinestyle いいね件数: #{@video.likes.count}
      - if current_user.already_liked?(@video)
        = button_to '❤️を取り消す', video_like_path(@video), method: :delete
      - else
        = button_to '❤️', video_likes_path(@video)
      .videostyle
        = video_tag @video.image.to_s, controls: true, width: "50%"
      - if user_signed_in? && current_user.id == @video.user_id
        .btnstyle
          .btnstyle__syosai
            = link_to '編集', "/videos/#{@video.id}/edit", method: :get, class: 'btn btn-default btn-block'
            = link_to '削除', "/videos/#{@video.id}", method: :delete, class: 'btn btn-default btn-block'
            .container
      / ここからフォーム
      - if current_user
        = form_tag("/videos/#{@video.id}/comments", method: :post) do
          .message-field
            %h4.message-field__title *************************コメント入力欄*************************
            %textarea{name: "text", placeholder: "コメントを入力して下さい。", class: 'message-area'}
            %input{type: 'submit', value: '投稿する', class: 'btn btn-default2'}
          .comments
            %h4.comments__title ＜コメント一覧＞
            - if @comments
              - @comments.each do |comment|
                %p
                  %strong
                    = link_to comment.user.name, '/users/#{comment.user_id}',class: 'username'
                    .comment-style
                      = comment.text
