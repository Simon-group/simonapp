%html.image1
  %body.imagecleah
    .content
      %h2.title 新規登録
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          = f.label :name, class: 'labelstyle'
          %em.labelstyle (アルファベットのみ可 8文字以内)
          %br/
          = f.text_field :name, autofocus: true, maxlength: "8"
        .field
          = f.label :email, class: 'labelstyle'
          %br/
          = f.email_field :email
        .field
          = f.label :password, class: 'labelstyle'
          - if @validatable
            %em
              (#{@minimum_password_length} characters minimum)
          %br/
          = f.password_field :password, autocomplete: "off"
        .field
          = f.label :password_confirmation, class: 'labelstyle'
          %br/
          = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "新規登録", class: 'btn btn-default btn-lg'
